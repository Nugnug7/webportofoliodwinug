      <script>
        const menuToggle = document.getElementById('menu-toggle');
        const nav = document.getElementById('nav');

            menuToggle.addEventListener('click', (e) => {
            e.preventDefault();                  // Mencegah link default bekerja
            nav.classList.toggle('open');
            menuToggle.classList.toggle('open'); // Tambahkan class 'open' pada tombol (opsional untuk styling)
            const isNavOpen = nav.classList.contains('open');
            menuToggle.setAttribute('aria-expanded', isNavOpen);
        });

        // Inisialisasi aria-expanded
        document.addEventListener('DOMContentLoaded', () => {
            menuToggle.setAttribute('aria-expanded', nav.classList.contains('open'));
        });
    </script>  


