              <script>
                const lines = [
                  "Hello, I'm Dwi Nugroho",
                  "A Fullstack Javascript Web Developer.",
                ];
            
                const el = document.getElementById("typewriter");
            
                let currentLine = 0;
                let charIndex = 0;
                let allText = "";
                let isTyping = true;
            
                function typeNextChar() {
                  if (currentLine < lines.length) {
                    const line = lines[currentLine];
                    if (charIndex < line.length) {
                      allText += line.charAt(charIndex);
                      charIndex++;
                      el.textContent = allText;
                      setTimeout(typeNextChar, 60);
                    } else {
                      allText += "\n";
                      el.textContent = allText;
                      currentLine++;
                      charIndex = 0;
                      setTimeout(typeNextChar, 500); // jeda sebelum baris berikutnya
                    }
                  } else {
                    // Semua baris selesai ➝ hapus teks ➝ ulangi
                    setTimeout(() => {
                      clearAllText();
                    }, 1500); // jeda sebelum reset
                  }
                }
            
                function clearAllText() {
                  el.textContent = "";
                  allText = "";
                  currentLine = 0;
                  charIndex = 0;
                  setTimeout(typeNextChar, 1000); // jeda sebelum mulai lagi
                }
            
                typeNextChar(); // mulai animasi
              </script>
